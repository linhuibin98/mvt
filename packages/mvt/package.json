{
  "name": "mvt",
  "version": "1.0.0",
  "license": "MIT",
  "description": "bundle less",
  "keywords": [
    "nobundle dev"
  ],
  "author": "linhuibin98 <1032352370@qq.com>",
  "bin": {
    "mvt": "bin/mvt.js"
  },
  "main": "dist/server/index.js",
  "types": "dist/server/index.d.ts",
  "scripts": {
    "dev": "run-p dev-client dev-server",
    "dev-client": "tsc -w --p src/client",
    "dev-server": "tsc -w --p src/server",
    "build": "tsc -p src/client && tsc -p src/server",
    "lint": "prettier --write --parser typescript \"src/**/*.ts\"",
    "test": "npm run build && jest",
    "prepublishOnly": "tsc"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --parser=typescript --write"
    ]
  },
  "jest": {
    "watchPathIgnorePatterns": [
      "<rootDir>/test/temp"
    ]
  },
  "dependencies": {
    "@babel/parser": "^7.21.3",
    "@vue/compiler-sfc": "^3.2.47",
    "chokidar": "^3.5.3",
    "magic-string": "^0.30.0",
    "minimist": "^1.2.8",
    "pathe": "^1.1.0",
    "resolve-from": "^5.0.0",
    "serve-handler": "^6.1.5",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/node": "^16.18.16",
    "@types/serve-handler": "^6.1.1",
    "@types/ws": "^8.5.4",
    "execa": "^4",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "puppeteer": "19.2",
    "typescript": "^5.0.2",
    "vue": "^3.2.47",
    "yorkie": "^2.0.0"
  }
}
